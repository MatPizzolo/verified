# Test Environment Variables
# Copy this to .env.test and fill in your test credentials

# Node Environment
NODE_ENV=test

# Test Database (Local PostgreSQL in Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/verified_test
DATABASE_URL_DOCKER=postgresql://postgres:postgres@test-db:5432/verified_test

# Supabase Test Project (Optional - use local DB or separate test project)
SUPABASE_URL_TEST=https://your-test-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY_TEST=your-test-service-role-key
NEXT_PUBLIC_SUPABASE_URL_TEST=https://your-test-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY_TEST=your-test-anon-key

# Or use local PostgreSQL
# SUPABASE_URL_TEST=http://localhost:5433
# SUPABASE_SERVICE_ROLE_KEY_TEST=local-test-key

# Test Exchange Rate (for validation scripts)
TEST_EXCHANGE_RATE=13505000  # 1350.50 ARS/USD * 10000

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test1234!

# Playwright E2E Testing
PLAYWRIGHT_BASE_URL=http://localhost:3001
PLAYWRIGHT_HEADLESS=true

# CI/CD Flags
CI=false
SKIP_ENV_VALIDATION=false

# CORS Configuration
# Comma-separated list of allowed origins for API requests
# In production, set this to your frontend domain(s)
ALLOWED_ORIGIN=http://localhost:3000
